# manufacturing_api - .env.example
# Copy to .env and configure for local/dev.

# --- Application metadata (optional) ---
APP_NAME=Manufacturing API
APP_DESCRIPTION=Backend API for a multi-tenant manufacturing ERP/MES platform. Provides business logic, data access, and integrations.
APP_VERSION=0.1.0
ENVIRONMENT=dev

# --- CORS settings (frontend dev server origin) ---
# For local dev with Vite at http://localhost:3000
CORS_ORIGINS=http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
# CORS_ALLOW_METHODS=*
# CORS_ALLOW_HEADERS=*

# --- Startup behavior ---
RUN_MIGRATIONS_ON_STARTUP=true
AUTO_SEED=false

# --- Auth / JWT ---
JWT_SECRET_KEY=dev-change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
# 14 days for refresh
REFRESH_TOKEN_EXPIRE_MINUTES=20160

# --- Database configuration ---
# Option 1: Provide a full URL. API will convert to async driver automatically.
# POSTGRES_URL=postgresql://appuser:dbuser123@localhost:5432/myapp

# Option 2: Provide individual pieces:
POSTGRES_USER=appuser
POSTGRES_PASSWORD=dbuser123
POSTGRES_DB=myapp
POSTGRES_HOST=localhost
# Default Postgres is 5432; if using manufacturing_db/startup.sh it may be 5000.
POSTGRES_PORT=5432

# SQLAlchemy engine debugging
SQL_ECHO=false
